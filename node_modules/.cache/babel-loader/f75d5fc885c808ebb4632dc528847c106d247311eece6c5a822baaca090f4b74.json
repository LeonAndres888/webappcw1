{"ast":null,"code":"export default {\n  props: {\n    products: Array,\n    searchLesson: String,\n    sortAttribute: String,\n    sortOrder: String\n  },\n  data() {\n    return {\n      localSearchLesson: this.searchLesson,\n      localSortAttribute: this.sortAttribute\n    };\n  },\n  computed: {\n    filteredProducts() {\n      const searchTerm = this.localSearchLesson.trim().toLowerCase();\n      return this.products.filter(product => product.title.toLowerCase().includes(searchTerm) || product.location.toLowerCase().includes(searchTerm));\n    },\n    sortedProducts() {\n      return this.filteredProducts.sort((a, b) => {\n        const modifier = this.sortOrder === \"ascending\" ? 1 : -1;\n        if (this.localSortAttribute === \"price\" || this.localSortAttribute === \"availableInventory\") {\n          return (a[this.localSortAttribute] - b[this.localSortAttribute]) * modifier;\n        }\n        return a[this.localSortAttribute].localeCompare(b[this.localSortAttribute]) * modifier;\n      });\n    }\n  },\n  methods: {\n    updateSearchLesson(value) {\n      this.localSearchLesson = value;\n      this.$emit(\"update:searchLesson\", value);\n    },\n    updateSortAttribute(value) {\n      this.localSortAttribute = value;\n      this.$emit(\"update:sortAttribute\", value);\n    },\n    updateSortOrder(order) {\n      this.$emit(\"update-sort-order\", order);\n    }\n  }\n};","map":{"version":3,"names":["props","products","Array","searchLesson","String","sortAttribute","sortOrder","data","localSearchLesson","localSortAttribute","computed","filteredProducts","searchTerm","trim","toLowerCase","filter","product","title","includes","location","sortedProducts","sort","a","b","modifier","localeCompare","methods","updateSearchLesson","value","$emit","updateSortAttribute","updateSortOrder","order"],"sources":["C:\\Users\\andre\\OneDrive\\Desktop\\CW2FinalFolder\\webappcw1\\src\\components\\LessonComponent.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <!-- Search input -->\r\n    <input\r\n      type=\"text\"\r\n      :value=\"localSearchLesson\"\r\n      @input=\"updateSearchLesson($event.target.value)\"\r\n      placeholder=\"Search lessons...\"\r\n      class=\"search-bar\"\r\n    />\r\n\r\n    <!-- Sorting buttons -->\r\n    <button @click=\"updateSortOrder('ascending')\" class=\"asc-button\">\r\n      Ascending\r\n    </button>\r\n    <button @click=\"updateSortOrder('descending')\" class=\"dsc-button\">\r\n      Descending\r\n    </button>\r\n\r\n    <!-- Dropdown for sorting -->\r\n    <select\r\n      :value=\"localSortAttribute\"\r\n      @change=\"updateSortAttribute($event.target.value)\"\r\n      class=\"drop-down\"\r\n    >\r\n      <option value=\"title\">Subject</option>\r\n      <option value=\"location\">Location</option>\r\n      <option value=\"price\">Price</option>\r\n      <option value=\"availableInventory\">Spaces</option>\r\n    </select>\r\n\r\n    <!-- Lesson cards displayed -->\r\n    <div\r\n      v-for=\"product in sortedProducts\"\r\n      :key=\"product.id\"\r\n      class=\"product-card\"\r\n    >\r\n      <figure>\r\n        <img :src=\"product.image\" :alt=\"product.title\" />\r\n      </figure>\r\n      <h2>{{ product.title }}</h2>\r\n      <p>Location: {{ product.location }}</p>\r\n      <p>Price: Â£{{ product.price }}</p>\r\n      <p>Spaces: {{ product.availableInventory }}</p>\r\n      <button\r\n        @click=\"$emit('add-item-to-cart', product)\"\r\n        :disabled=\"product.availableInventory === 0\"\r\n      >\r\n        Add to Cart\r\n      </button>\r\n      <p v-if=\"product.availableInventory === 0\" class=\"sold-out\">Sold Out</p>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  props: {\r\n    products: Array,\r\n    searchLesson: String,\r\n    sortAttribute: String,\r\n    sortOrder: String,\r\n  },\r\n  data() {\r\n    return {\r\n      localSearchLesson: this.searchLesson,\r\n      localSortAttribute: this.sortAttribute,\r\n    };\r\n  },\r\n  computed: {\r\n    filteredProducts() {\r\n      const searchTerm = this.localSearchLesson.trim().toLowerCase();\r\n      return this.products.filter(\r\n        (product) =>\r\n          product.title.toLowerCase().includes(searchTerm) ||\r\n          product.location.toLowerCase().includes(searchTerm)\r\n      );\r\n    },\r\n    sortedProducts() {\r\n      return this.filteredProducts.sort((a, b) => {\r\n        const modifier = this.sortOrder === \"ascending\" ? 1 : -1;\r\n        if (\r\n          this.localSortAttribute === \"price\" ||\r\n          this.localSortAttribute === \"availableInventory\"\r\n        ) {\r\n          return (\r\n            (a[this.localSortAttribute] - b[this.localSortAttribute]) * modifier\r\n          );\r\n        }\r\n        return (\r\n          a[this.localSortAttribute].localeCompare(b[this.localSortAttribute]) *\r\n          modifier\r\n        );\r\n      });\r\n    },\r\n  },\r\n  methods: {\r\n    updateSearchLesson(value) {\r\n      this.localSearchLesson = value;\r\n      this.$emit(\"update:searchLesson\", value);\r\n    },\r\n    updateSortAttribute(value) {\r\n      this.localSortAttribute = value;\r\n      this.$emit(\"update:sortAttribute\", value);\r\n    },\r\n    updateSortOrder(order) {\r\n      this.$emit(\"update-sort-order\", order);\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\nbody {\r\n  font-family: \"Times New Roman\", Times, serif;\r\n  background-color: #ddd0c8;\r\n}\r\n\r\nheader {\r\n  display: flex;\r\n  justify-content: center;\r\n  font-family: \"Times New Roman\", Times, serif;\r\n  padding: 2px;\r\n  height: 100px;\r\n}\r\n\r\nbutton {\r\n  padding: 8px 20px;\r\n  border: none;\r\n  background-color: #2a2a2a;\r\n  color: #ffffff;\r\n  transition: background-color 0.6s ease;\r\n  border-radius: 50px;\r\n  cursor: pointer;\r\n}\r\n\r\n#titlename {\r\n  font-size: 50px;\r\n  font-weight: bold;\r\n  color: #712626;\r\n  margin-top: 10px;\r\n}\r\n\r\nbutton:hover {\r\n  